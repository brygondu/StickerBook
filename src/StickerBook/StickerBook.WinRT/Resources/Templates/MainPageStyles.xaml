<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="PlayersItemTemplate">
        <Border Padding="5" Width="150" Height="180" Background="#7F000000" Margin="0,0,20,20">
            <StackPanel Margin="0,5">
                <Border Background="#99FFFFFF" Width="125" Height="125">
                    <Image Source="{Binding Photo}" HorizontalAlignment="Center" Width="125" />
                </Border>
                <TextBlock Text="{Binding Name}" Margin="5,0" TextAlignment="Center" TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>